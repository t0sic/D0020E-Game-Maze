{
    "name": "d0020e-game-maze",
    "version": "1.0.0",
    "description": "A maze game for the D0020E course",
    "main": "./backend/index.js",
    "type": "module",
    "scripts": {
        "start": "node backend/index.js",
        "dev:backend": "nodemon backend/index.js",
        "dev:frontend": "webpack --mode development --watch",
        "format": "npx prettier --log-level silent --write .",
        "watch:format": "chokidar \"**/*.{js,json,css,md,jsx}\" \"!public/**/*\" -c \"npm run format\"",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run watch:format\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/t0sic/D0020E-Game-Maze.git"
    },
    "author": "Mikolaj Kaniecki, Jonathan Lindholm, Agvan Bedorisan, Santiago Tibaduiza, Fredrik Sundh",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/t0sic/D0020E-Game-Maze/issues"
    },
    "homepage": "https://github.com/t0sic/D0020E-Game-Maze#readme",
    "devDependencies": {
        "@babel/core": "^7.23.3",
        "@babel/preset-env": "^7.23.3",
        "@babel/preset-react": "^7.23.3",
        "babel-loader": "^9.1.3",
        "chokidar-cli": "^3.0.0",
        "concurrently": "^8.2.2",
        "css-loader": "^6.8.1",
        "nodemon": "^3.0.1",
        "prettier": "^3.1.0",
        "style-loader": "^3.3.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "socket.io": "^4.7.2",
        "socket.io-client": "^4.7.2",
        "uuid": "^9.0.1"
    }
}
